{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "types": ["node"]
  },
  "exclude": ["node_modules", "src/**/*.spec.ts"],
  "include": ["src/**/*.ts"]
}
